    <div class = "chat-ue" >
      <div class = "gaiyou"><%= @room.name %></div>
      <div class = "finishbotan">
       <h2 class = "finishbotan1">
      <a href="#">チャットを終了する</a></h2>
    </div>
    </div>
    <div class = "chat-mannaka">
      <%= render partial: 'message', collection: @messages %>
    </div>
    
    <div class = "chat-sita">
      <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
        <div class = "form">
        <%= f.text_field :content, class: 'inputtext', placeholder: 'type a message' %>

          <label class="form-image">
            <span class="image-file">画像</span>
            <%= f.file_field :image, class: 'hidden' %>
          </label>
       </div>
      <%= f.submit '送信', class: 'submitbotan' %>
      <% end %>
    </div>